@{
    ViewData["Title"] = "Créer un compte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-page-wrapper">
    <div class="login-form-container">
        <div class="login-form-card">
            <div class="login-form-header">
                <div class="login-logo-icon">
                    <i class="fas fa-user-plus"></i>
                </div>
                <h2 class="login-form-title">Créer un compte</h2>
                <p class="login-form-subtitle">Créez un nouveau compte utilisateur pour votre organisation</p>
            </div>

            <div class="login-form-body">
                <form asp-action="Register" method="post" class="login-form">
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success login-error-alert" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@ViewBag.SuccessMessage
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger login-error-alert" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
                        </div>
                    }

                    <div class="login-form-group">
                        <label for="email" class="login-form-label">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input 
                            id="email" 
                            name="email" 
                            type="email" 
                            class="login-form-input" 
                            placeholder="votre@email.com" 
                            required 
                            autocomplete="email" />
                    </div>

                    <div class="login-form-group">
                        <label for="password" class="login-form-label">
                            <i class="fas fa-lock"></i> Mot de passe
                        </label>
                        <input 
                            id="password" 
                            name="password" 
                            type="password" 
                            class="login-form-input" 
                            placeholder="Votre mot de passe" 
                            required 
                            autocomplete="new-password" />
                        <small class="login-form-hint">Minimum 6 caractères</small>
                    </div>

                    <div class="login-form-group">
                        <label for="confirmPassword" class="login-form-label">
                            <i class="fas fa-lock"></i> Confirmer le mot de passe
                        </label>
                        <input 
                            id="confirmPassword" 
                            name="confirmPassword" 
                            type="password" 
                            class="login-form-input" 
                            placeholder="Confirmez votre mot de passe" 
                            required 
                            autocomplete="new-password" />
                    </div>

                    <div class="login-form-group">
                        <label for="role" class="login-form-label">
                            <i class="fas fa-user-tag"></i> Rôle
                        </label>
                        <select 
                            id="role" 
                            name="role" 
                            class="login-form-input login-form-select" 
                            required>
                            <option value="">Sélectionnez un rôle</option>
                            <option value="Employe">Employé</option>
                            <option value="Manager">Manager</option>
                            <option value="RH">RH</option>
                        </select>
                        <small class="login-form-hint">Sélectionnez le rôle du nouvel utilisateur</small>
                    </div>

                    <button type="submit" class="login-form-submit-btn">
                        <i class="fas fa-user-plus me-2"></i>Créer mon compte
                    </button>

                    <div class="login-form-footer">
                        <p class="login-form-footer-text">
                            Vous avez déjà un compte ? 
                            <a asp-action="Login" class="login-form-footer-link">Se connecter</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


