@{
    ViewData["Title"] = "Télétravail";
}

<div class="container mt-4">
    <div class="section-header text-center mb-5">
        <h2 class="section-title">
            <i class="fas fa-home"></i> Télétravail
        </h2>
    </div>

    <div class="row g-4">
        <!-- Nouvelle demande -->
        <div class="col-md-6 col-lg-4">
            <div class="feature-card-modern" onclick="location.href='@Url.Action("Create")';" style="cursor: pointer;">
                <div class="feature-icon-wrapper bg-soft-success">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <h3 class="feature-title-modern">Nouvelle demande</h3>
                <p class="feature-text-modern">Soumettez une nouvelle demande de télétravail</p>
            </div>
        </div>

        <!-- Mes jours -->
        <div class="col-md-6 col-lg-4">
            <div class="feature-card-modern" onclick="location.href='@Url.Action("MyTelework")';" style="cursor: pointer;">
                <div class="feature-icon-wrapper bg-soft-primary">
                    <i class="fas fa-laptop"></i>
                </div>
                <h3 class="feature-title-modern">Mes jours de télétravail</h3>
                <p class="feature-text-modern">Consultez vos demandes en cours</p>
            </div>
        </div>

        <!-- Historique -->
        <div class="col-md-6 col-lg-4">
            <div class="feature-card-modern" onclick="location.href='@Url.Action("History")';" style="cursor: pointer;">
                <div class="feature-icon-wrapper bg-soft-info">
                    <i class="fas fa-history"></i>
                </div>
                <h3 class="feature-title-modern">Historique</h3>
                <p class="feature-text-modern">Voir toutes vos demandes passées</p>
            </div>
        </div>
    </div>

    <!-- Statistiques rapides -->
    <div class="row g-4 mt-2">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3" style="border-radius: 15px; background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white;">
                <h6 class="mb-2">Total</h6>
                <h3 class="fw-bold mb-0">24</h3>
                <small>Jours demandés</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3" style="border-radius: 15px; background: linear-gradient(135deg, #17a2b8 0%, #138496 100%); color: white;">
                <h6 class="mb-2">En attente</h6>
                <h3 class="fw-bold mb-0">2</h3>
                <small>Demandes</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3" style="border-radius: 15px; background: linear-gradient(135deg, #ffc107 0%, #ff9800 100%); color: white;">
                <h6 class="mb-2">Ce mois</h6>
                <h3 class="fw-bold mb-0">5</h3>
                <small>Jours</small>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm text-center p-3" style="border-radius: 15px; background: linear-gradient(135deg, #6f42c1 0%, #5a32a3 100%); color: white;">
                <h6 class="mb-2">Moyenne</h6>
                <h3 class="fw-bold mb-0">2.4</h3>
                <small>Jours/semaine</small>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }
</style>

