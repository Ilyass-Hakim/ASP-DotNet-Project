@{
    ViewData["Title"] = "Télétravail";
}

<div class="container mt-4">
    <div class="section-header text-center mb-5">
        <h2 class="section-title">
            <i class="fas fa-home"></i> Télétravail
        </h2>
    </div>

    <div class="row g-4">
        <!-- Nouvelle demande -->
        <div class="col-md-6 col-lg-4">
            <div class="feature-card-modern" onclick="location.href='@Url.Action("Create")';" style="cursor: pointer;">
                <div class="feature-icon-wrapper bg-soft-success">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <h3 class="feature-title-modern">Nouvelle demande</h3>
                <p class="feature-text-modern">Soumettez une nouvelle demande de télétravail</p>
            </div>
        </div>

        <!-- Mes jours -->
        <div class="col-md-6 col-lg-4">
            <div class="feature-card-modern" onclick="location.href='@Url.Action("MyTelework")';" style="cursor: pointer;">
                <div class="feature-icon-wrapper bg-soft-primary">
                    <i class="fas fa-laptop"></i>
                </div>
                <h3 class="feature-title-modern">Mes jours de télétravail</h3>
                <p class="feature-text-modern">Consultez vos demandes en cours</p>
            </div>
        </div>

        <!-- Historique -->
        <div class="col-md-6 col-lg-4">
            <div class="feature-card-modern" onclick="location.href='@Url.Action("History")';" style="cursor: pointer;">
                <div class="feature-icon-wrapper bg-soft-info">
                    <i class="fas fa-history"></i>
                </div>
                <h3 class="feature-title-modern">Historique</h3>
                <p class="feature-text-modern">Voir toutes vos demandes passées</p>
            </div>
        </div>
    </div>


</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
    }
</style>

