@model IEnumerable<PlateformeRHCollaborative.Web.Models.PerformanceEvaluation>

@{
    ViewData["Title"] = "Suivi des Performances";
}

<div class="container mt-4">
    <div class="az-content-left az-content-left-components">
        <div class="az-content-breadcrumb">
            <span>Performances</span>
            <span>Tableau de bord</span>
        </div>
        <h2 class="az-content-title">Suivi des Evaluations</h2>
        <p>Gérez et consultez les évaluations de performance et les primes associées.</p>

        @if (User.IsInRole("Manager"))
        {
            <div class="mb-4">
                <a asp-controller="Manager" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouvelle Évaluation
                </a>
            </div>
        }
    </div>

    <div class="az-content-body">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead class="bg-light">
                            <tr>
                                <th>Date</th>
                                <th>Employé</th>
                                <th>Score Final</th>
                                <th>Bonus Calculé</th>
                                <th>Statut Bonus</th>
                                <th>Statut Eval.</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.EvaluationDate.ToShortDateString()</td>
                                    <td>@item.Employee?.Nom</td>
                                    <td>
                                        <div class="progress" style="height: 10px;">
                                            <div class="progress-bar @(item.FinalScore >= 85 ? "bg-success" : (item.FinalScore >= 60 ? "bg-info" : "bg-warning"))" 
                                                 role="progressbar" style="width: @item.FinalScore%" 
                                                 aria-valuenow="@item.FinalScore" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                        <small>@item.FinalScore.ToString("F1")%</small>
                                    </td>
                                    <td>@item.CalculatedBonus.ToString("C")</td>
                                    <td>
                                        @if (item.BonusStatus == PlateformeRHCollaborative.Web.Models.BonusStatus.Pending)
                                        {
                                            <span class="badge bg-warning text-dark">En attente</span>
                                        }
                                        else if (item.BonusStatus == PlateformeRHCollaborative.Web.Models.BonusStatus.Approved)
                                        {
                                            <span class="badge bg-success">Validé</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Rejeté</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@item.Status</span>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                        @if (User.IsInRole("RH") && item.BonusStatus == PlateformeRHCollaborative.Web.Models.BonusStatus.Pending)
                                        {
                                            <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#validateModal-@item.Id">
                                                <i class="fas fa-check"></i> Valider
                                            </button>

                                            <!-- Modal Validation RH -->
                                            <div class="modal fade" id="validateModal-@item.Id" tabindex="-1" role="dialog">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <form asp-action="ValidateBonus" method="post">
                                                            <input type="hidden" name="id" value="@item.Id" />
                                                            <div class="modal-header">
                                                                <h5 class="modal-title">Validation Prime @item.Employee?.Nom</h5>
                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <div class="form-group mb-3">
                                                                    <label>Statut</label>
                                                                    <select name="status" class="form-control">
                                                                        <option value="Approved">Valider</option>
                                                                        <option value="Rejected">Rejeter</option>
                                                                    </select>
                                                                </div>
                                                                <div class="form-group mb-3">
                                                                    <label>Montant Ajusté (optionnel)</label>
                                                                    <input type="number" name="adjustedAmount" class="form-control" value="@item.CalculatedBonus" step="0.01" />
                                                                </div>
                                                                <div class="form-group mb-3">
                                                                    <label>Commentaires RH</label>
                                                                    <textarea name="comments" class="form-control" rows="3"></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                                                                <button type="submit" class="btn btn-primary">Confirmer</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
