@model PlateformeRHCollaborative.Web.Models.Employee
@{
    ViewData["Title"] = "Mon Profil";
    var initials = (!string.IsNullOrEmpty(Model?.Nom) && Model.Nom.Length >= 2) ? Model.Nom.Substring(0, 2).ToUpper() : "U";
}

<div class="profile-layout">
    @if (Model != null)
    {
        <!-- 1. Header Card -->
        <div class="profile-card profile-header-card">
            <div class="profile-avatar-wrapper">
                <div class="profile-avatar">
                    @initials
                </div>
                <div class="profile-status-badge">
                    <i class="fas fa-check-circle"></i> Actif
                </div>
            </div>
            
            <h1 class="profile-name">@Model.Nom</h1>

            
            <a asp-controller="Settings" asp-action="Index" class="btn btn-primary-soft rounded-pill px-4">
                <i class="fas fa-pen me-2"></i> Modifier mon profil
            </a>
        </div>

        <!-- 2. Informations Grid -->
        <div class="profile-grid">
            <!-- Personal Info -->
            <div class="profile-card">
                <div class="card-header-styled">
                    <i class="fas fa-user-circle"></i>
                    <span>Informations Personnelles</span>
                </div>
                <div class="card-body-styled">
                    <div class="info-group">
                        <label>Email Professionnel</label>
                        <div class="value">
                            <i class="fas fa-envelope text-muted me-2"></i> @Model.Email
                        </div>
                    </div>
                    <div class="info-group">
                        <label>Téléphone</label>
                        <div class="value">
                            <i class="fas fa-phone text-muted me-2"></i> @(string.IsNullOrEmpty(Model.PhoneNumber) ? "Non renseigné" : Model.PhoneNumber)
                        </div>
                    </div>
                     <div class="info-group">
                        <label>Adresse</label>
                        <div class="value">
                            <i class="fas fa-map-marker-alt text-muted me-2"></i> @(string.IsNullOrEmpty(Model.Address) ? "Non renseignée" : Model.Address)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Professional Info -->
            <div class="profile-card">
                <div class="card-header-styled">
                    <i class="fas fa-briefcase"></i>
                    <span>Informations Professionnelles</span>
                </div>
                <div class="card-body-styled">
                    <div class="info-group">
                        <label>Département</label>
                        <div class="value">
                            <span class="badge bg-light text-dark border">@Model.Department</span>
                        </div>
                    </div>
                    <div class="info-group">
                        <label>Type de Contrat</label>
                        <div class="value">@Model.ContractType</div>
                    </div>
                    <div class="info-group">
                        <label>Manager Direct</label>
                        <div class="value d-flex align-items-center">
                            <div class="avatar-mini me-2">
                                @(Model.Manager?.Nom?.Substring(0,1) ?? "?")
                            </div>
                            <span>@(Model.Manager?.Nom ?? "Aucun")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center mt-5 p-5 shadow-sm rounded-4">
            <i class="fas fa-exclamation-triangle fa-3x mb-3 text-warning"></i>
            <h4>Profil Employé Introuvable</h4>
            <p>Impossible de charger votre profil employé. Veuillez contacter le support.</p>
        </div>
    }
</div>

<style>
    /* Premium Design System Variables */
    :root {
        --primary: #2563EB; /* User Requested Blue */
        --primary-light: #EFF6FF;
        --secondary: #64748B;
        --text-dark: #1E293B;
        --text-light: #64748B;
        --bg-card: #FFFFFF;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --radius-lg: 16px;
    }

    .profile-layout {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 0 1rem;
        font-family: 'Inter', sans-serif;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    /* Cards */
    .profile-card {
        background: var(--bg-card);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-md);
        overflow: hidden;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .profile-card:hover {
        box-shadow: var(--shadow-lg);
    }

    /* Header Section */
    .profile-header-card {
        padding: 3rem 2rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        background: linear-gradient(to bottom, #ffffff, #f8fafc);
        border: 1px solid #e2e8f0;
    }

    .profile-avatar-wrapper {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, var(--primary), #1d4ed8);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        font-weight: 700;
        box-shadow: 0 10px 25px -5px rgba(37, 99, 235, 0.4);
        border: 4px solid white;
    }

    .profile-status-badge {
        position: absolute;
        bottom: 5px;
        right: 0;
        background: #10B981;
        color: white;
        font-size: 0.75rem;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-weight: 600;
        border: 2px solid white;
        display: flex; align-items: center; gap: 4px;
    }

    .profile-name {
        font-size: 1.75rem;
        font-weight: 800;
        color: var(--text-dark);
        margin-bottom: 0.25rem;
        letter-spacing: -0.025em;
    }

    .profile-role {
        color: var(--text-light);
        font-weight: 500;
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    /* Custom Button */
    .btn-primary-soft {
        background-color: var(--primary-light);
        color: var(--primary);
        font-weight: 600;
        border: 1px solid transparent;
        transition: all 0.2s;
    }
    
    .btn-primary-soft:hover {
        background-color: var(--primary);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.2);
    }

    /* Grid Layout */
    .profile-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
    }

    .card-header-styled {
        padding: 1.25rem 1.75rem;
        background: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
        font-weight: 700;
        color: var(--text-dark);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-size: 1.05rem;
    }

    .card-header-styled i {
        color: var(--primary);
    }

    .card-body-styled {
        padding: 1.75rem;
    }

    .info-group {
        margin-bottom: 1.25rem;
    }

    .info-group:last-child { margin-bottom: 0; }

    .info-group label {
        display: block;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-light);
        font-weight: 600;
        margin-bottom: 0.4rem;
    }

    .info-group .value {
        font-size: 1rem;
        color: var(--text-dark);
        font-weight: 500;
    }

    .avatar-mini {
        width: 28px; height: 28px;
        background: var(--primary);
        color: white;
        border-radius: 50%;
        display: flex; align-items: center; justify-content: center;
        font-size: 0.8rem;
        font-weight: bold;
    }

    @@media (max-width: 768px) {
        .profile-grid { grid-template-columns: 1fr; }
        .profile-layout { margin-top: 1rem; }
    }
</style>
