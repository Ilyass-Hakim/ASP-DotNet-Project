@{
    ViewData["Title"] = "Mon solde de congés";
}

<div class="container mt-4">
    <div class="section-header text-center mb-5">
        <h2 class="section-title">
            <i class="fas fa-chart-pie"></i> Mon solde de congés
        </h2>
    </div>

    <div class="row g-4">
        <!-- Carte totale -->
        <div class="col-md-4">
            <div class="card border-0 shadow-lg text-white bg-primary h-100" style="border-radius: 15px;">
                <div class="card-body text-center p-4">
                    <i class="fas fa-calendar fa-3x mb-3"></i>
                    <h5 class="card-title mb-3">Total de congés annuels</h5>
                    <h1 class="display-3 fw-bold">25</h1>
                    <p class="mb-0">Jours alloués</p>
                </div>
            </div>
        </div>

        <!-- Carte utilisés -->
        <div class="col-md-4">
            <div class="card border-0 shadow-lg text-white" style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); border-radius: 15px;">
                <div class="card-body text-center p-4">
                    <i class="fas fa-calendar-times fa-3x mb-3"></i>
                    <h5 class="card-title mb-3">Congés utilisés</h5>
                    <h1 class="display-3 fw-bold">10</h1>
                    <p class="mb-0">Jours pris</p>
                </div>
            </div>
        </div>

        <!-- Carte restants -->
        <div class="col-md-4">
            <div class="card border-0 shadow-lg text-white" style="background: linear-gradient(135deg, #27ae60 0%, #229954 100%); border-radius: 15px;">
                <div class="card-body text-center p-4">
                    <i class="fas fa-calendar-check fa-3x mb-3"></i>
                    <h5 class="card-title mb-3">Congés restants</h5>
                    <h1 class="display-3 fw-bold">15</h1>
                    <p class="mb-0">Jours disponibles</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Progress bar -->
    <div class="card border-0 shadow-sm mt-4" style="border-radius: 15px;">
        <div class="card-body p-4">
            <h5 class="fw-bold mb-3">Progression annuelle</h5>
            <div class="progress" style="height: 30px; border-radius: 15px;">
                <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" 
                     style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">
                    40% utilisés
                </div>
            </div>
        </div>
    </div>

    <!-- Détails par période -->
    <div class="card border-0 shadow-sm mt-4" style="border-radius: 15px;">
        <div class="card-body p-4">
            <h5 class="fw-bold mb-4">
                <i class="fas fa-list-alt"></i> Détails
            </h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead style="background-color: #f8f9fa;">
                        <tr>
                            <th scope="col">Période</th>
                            <th scope="col">Statut</th>
                            <th scope="col">Jours</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Janvier 2025</td>
                            <td><span class="badge bg-success">Approuvé</span></td>
                            <td>5 jours</td>
                        </tr>
                        <tr>
                            <td>Mars 2025</td>
                            <td><span class="badge bg-warning">En attente</span></td>
                            <td>3 jours</td>
                        </tr>
                        <tr>
                            <td>Juin 2025</td>
                            <td><span class="badge bg-success">Approuvé</span></td>
                            <td>2 jours</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


