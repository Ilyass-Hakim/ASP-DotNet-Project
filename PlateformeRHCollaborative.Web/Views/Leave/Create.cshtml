@model PlateformeRHCollaborative.Web.Models.Leave

@{
    ViewData["Title"] = "Nouvelle demande de congé";
}

<div class="container mt-4">
    <div class="section-header text-center mb-5">
        <h2 class="section-title">
            <i class="fas fa-plus-circle"></i> Nouvelle demande de congé
        </h2>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label fw-bold">Date de début</label>
                            <input asp-for="StartDate" type="date" class="form-control form-control-lg" required />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label fw-bold">Date de fin</label>
                            <input asp-for="EndDate" type="date" class="form-control form-control-lg" required />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Reason" class="form-label fw-bold">Motif</label>
                            <textarea asp-for="Reason" class="form-control" rows="4" placeholder="Veuillez décrire le motif de votre demande..." required></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <div class="d-flex flex-column mt-4">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                <i class="fas fa-paper-plane"></i> Soumettre la demande
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill" style="margin-top: 10px;">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

