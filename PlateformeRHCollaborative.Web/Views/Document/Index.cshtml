@{
    ViewData["Title"] = "Documents RH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="section-header text-center mb-5">
        <h2 class="section-title">
            <i class="fas fa-file-alt"></i> Documents RH
        </h2>
        <p class="section-description text-center">
            Espace de téléchargement et consultation des documents RH.
        </p>
    </div>

            <div class="row justify-content-center">
                <!-- Attestations -->
                <div class="col-md-5 mb-4">
                    <div class="feature-card-modern h-100 p-4">
                        <div class="feature-icon-wrapper bg-soft-primary mb-4">
                            <i class="fas fa-file-pdf"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Attestations de travail</h4>
                        <p class="text-muted mb-4">Générez instantanément votre attestation de travail officielle au format PDF.</p>
                        <a asp-action="GenerateCertificate" class="btn btn-primary rounded-pill px-4 w-100 mt-auto">
                            <i class="fas fa-download me-2"></i> Générer l'attestation
                        </a>
                    </div>
                </div>

                <!-- Fiches de paie -->
                <div class="col-md-5 mb-4">
                    <div class="feature-card-modern h-100 p-4">
                        <div class="feature-icon-wrapper bg-soft-success mb-4">
                            <i class="fas fa-file-invoice-dollar"></i>
                        </div>
                        <h4 class="fw-bold mb-3">Fiches de paie</h4>
                        <p class="text-muted mb-4">Consultez et téléchargez vos fiches de paie pour le mois en cours.</p>
                        <a asp-action="GeneratePaySlip" class="btn btn-success rounded-pill px-4 w-100 mt-auto">
                            <i class="fas fa-download me-2"></i> Télécharger la fiche de paie
                        </a>
                    </div>
                </div>
            </div>
</div>





